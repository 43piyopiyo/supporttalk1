<%############################## 投稿一覧 ##################################%>
<div class="contents-lists">
  投稿一覧
  <% @tweets.each do |tweet| %>
    <div class="contents-list" style="background-image: url(<%= tweet.image %>);">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '削除', tweet_path(tweet.id), method: :delete %>
          </li>
        </ul>
      </div>
      <p><%= tweet.text %></p>
      <span class="name">
        by  <%= tweet.name %>
      </span>
    </div>
  <% end %>
</div>