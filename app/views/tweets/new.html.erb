<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @tweet, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "ニックネームを入力してください" %>
      <%= form.text_field :image, placeholder: "画像のアドレスを入力してください" %>
      <%= form.text_area :text, placeholder: "メッセージを入力してください", rows: "10" %>
      <%= form.submit "送信" %>
    <% end %>
  </div>
</div>